# ── Supabase ──────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ── MCP / Dedalus ────────────────────────────────────
# "mock" = deterministic fake data, "real" = call live APIs
MCP_MODE=mock
# If using hosted Dedalus gateway:
# DEDALUS_URL=https://dedalus.example.com
# DEDALUS_API_KEY=your-dedalus-key

# ── Google (server-side only) ────────────────────────
GOOGLE_PLACES_API_KEY=
GOOGLE_MAPS_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# ── Duffel (server-side only) ────────────────────────
DUFFEL_API_TOKEN=

# ── Booking.com Demand API (server-side only) ────────
BOOKINGCOM_API_KEY=
BOOKINGCOM_AFFILIATE_ID=

# ── OpenTable (server-side only) ─────────────────────
OPENTABLE_API_KEY=

# ── Notion (server-side only) ────────────────────────
NOTION_API_KEY=

# ── Apple Wallet Signing (server-side only) ──────────
WALLET_PASS_TYPE_ID=pass.com.example.travelbutler
WALLET_TEAM_ID=
WALLET_CERT_PATH=certs/pass.pem
WALLET_KEY_PATH=certs/pass.key
WALLET_WWDR_PATH=certs/wwdr.pem

# ── App ──────────────────────────────────────────────
API_BASE_URL=http://localhost:8000
LOG_LEVEL=DEBUG
